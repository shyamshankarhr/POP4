<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/educ_fragment"
    android:background="@drawable/sky2">
    <LinearLayout
        android:layout_below="@+id/search_edu"
        android:layout_width="match_parent"
        android:layout_height="86.8dp"
        android:background="#AA000000">
        <ImageView
            android:layout_height="wrap_content"
            android:layout_width="100dp"
            android:src="@drawable/education1"
            android:adjustViewBounds="true"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="25dp"
            android:id="@+id/edu_trans"
            />
        <TextView
            android:layout_marginLeft="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Education"
            android:textColor="#ffffff"
            android:layout_marginTop="35dp"
            android:textSize="25sp"
            android:textStyle="bold"
            />
    </LinearLayout>


    <ImageButton
        android:id="@+id/image_scholar"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:src="@drawable/scholarship"
        android:layout_marginLeft="100dp"
        android:adjustViewBounds="true"
        android:layout_gravity="left"
        android:layout_marginStart="35dp"
        android:layout_marginTop="145dp"
        android:scaleType="fitXY"
        android:background="#56000000"
        android:onClick="onClickEducationItem"/>
    <ImageView
        android:id="@+id/image_loans"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:src="@drawable/loans"
        android:layout_marginLeft="100dp"
        android:adjustViewBounds="true"
        android:layout_gravity="right"
        android:layout_marginStart="200dp"
        android:layout_marginTop="145dp"
        android:background="#56000000"/>
    <ImageView
        android:id="@+id/image_exam"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:src="@drawable/exams"
        android:layout_marginLeft="100dp"
        android:adjustViewBounds="true"
        android:layout_gravity="left"
        android:layout_marginStart="35dp"
        android:layout_marginTop="275dp"
        android:background="#56000000"/>
    <ImageView
        android:id="@+id/image_contacts"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:src="@drawable/contacts"
        android:layout_marginLeft="100dp"
        android:adjustViewBounds="true"
        android:layout_gravity="left"
        android:layout_marginStart="200dp"
        android:layout_marginTop="275dp"
        android:background="#56000000"/>
    <HorizontalScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:scrollbars="none"
        android:background="#99000000">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:orientation="horizontal">
            <ImageButton
                android:layout_width="140dp"
                android:layout_height="100dp"
                android:src="@drawable/healthcare"
                android:adjustViewBounds="true"
                android:scaleType="fitCenter"
                android:id="@+id/Health_But"
                android:onClick="onClickTile"
                android:background="#88000000"
                />

            <ImageButton
                android:layout_width="140dp"
                android:layout_height="match_parent"
                android:src="@drawable/govtbenefits"
                android:adjustViewBounds="true"
                android:scaleType="fitCenter"
                android:id="@+id/Govt_But"
                android:onClick="onClickTile"
                android:background="#88000000"
                />

            <ImageButton
                android:layout_width="140dp"
                android:layout_height="wrap_content"
                android:src="@drawable/commonlaws"
                android:onClick="onClickTile"
                android:adjustViewBounds="true"
                android:scaleType="fitCenter"
                android:background="#88000000"
                android:id="@+id/Comm_But"/>

        </LinearLayout>


    </HorizontalScrollView>
    <EditText
        android:layout_width="300dp"
        android:paddingStart="16dp"
        android:layout_height="wrap_content"
        android:id="@+id/search_edu"
        android:ellipsize="start"
        android:background="#dd000000"
        android:paddingBottom="10dp"
        android:paddingRight="15dp"
        android:paddingTop="10dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:drawablePadding="10dp"
        android:drawableRight="@drawable/search"
        android:hint="Search..."
        android:textColorHint="#ffffff"
        android:textColor="#ffffff"
        android:height="10dp"
        android:singleLine="true"/>
</RelativeLayout>
